<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adm.wptbuild.MainActivity">

    <EditText
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Your level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Strength: "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelText" />

    <EditText
        android:id="@+id/strgTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="5"
        android:inputType="number"
        android:text="28"
        app:layout_constraintTop_toBottomOf="@id/levelText"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/txt1"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Spirit: "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt1" />

    <EditText
        android:id="@+id/sprtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:text="6"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/strgTxt"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/txt2"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Talent: "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2" />

    <EditText
        android:id="@+id/talText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:text="21"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sprtText"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/txt3"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Agility: "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt3" />

    <EditText
        android:id="@+id/agiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:text="17"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/talText"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/txt4"/>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Health: "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt4" />

    <EditText
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:text="27"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/agiText"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/txt5"/>

    <Button
        android:id="@+id/CalculateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Calculate"
        app:layout_constraintTop_toBottomOf="@id/healthText"
        android:layout_marginLeft="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/pointsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/CalculateBtn"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"/>




</android.support.constraint.ConstraintLayout>
